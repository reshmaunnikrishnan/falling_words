source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'

target 'FallingWords' do
    # Comment this line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!

    pod 'RxSwift',    '~> 4.0'
    pod 'RxCocoa',    '~> 4.0'

    pod 'RealmSwift'
    
    pod 'Alamofire'
    pod 'RxAlamofire'

    target 'FallingWordsTests' do
        inherit! :search_paths

        pod 'RxBlocking', '~> 4.0'
        pod 'RxTest',     '~> 4.0'
    end
end
